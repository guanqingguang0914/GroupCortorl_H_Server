<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ifmusic"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:text="@string/openmusic"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:text="@string/file_down"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/group"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:background="@drawable/bg_btn"
            android:text="@string/team_set"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/sleeptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_12" />

    <SeekBar
        android:id="@+id/seekbar_sleeptime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        style="@style/progress_bar"
        android:progressDrawable="@drawable/progress_style"
         />

    <TextView
        android:id="@+id/countdowntime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_12" />

    <SeekBar
        android:layout_marginLeft="50dp"
        android:id="@+id/seekbar_countdown"
        android:layout_width="fill_parent"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/progress_bar"
        android:progressDrawable="@drawable/progress_style"
        />

   <!-- <Button
        android:id="@+id/qianjin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="前进"
        android:textSize="50px"
        />-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/zuozhuanwan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="300dp"
            android:text="左转弯"
            android:visibility="invisible"
            android:textSize="50px"
            />
        <Button
            android:id="@+id/qianjin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="80dp"
            android:text="前进"
            android:textSize="50px"
            />
        <Button
            android:id="@+id/youzhuanwan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:text="右转弯"
            android:visibility="invisible"
            android:textSize="50px"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/zuozhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左移"
            android:textSize="50px"
            android:layout_marginLeft="300dp"
            />
        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止"
            android:textSize="50px"
            android:layout_marginLeft="100dp"
            />
        <Button
            android:id="@+id/youzhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右移"
            android:textSize="50px"
            android:layout_marginLeft="100dp"
            />


    </LinearLayout>
    <Button
        android:id="@+id/houtui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:text="后退"
        android:textSize="50px"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/openbannace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="打开平衡"
            android:textSize="50px"
            android:layout_marginLeft="300dp"
            />
        <Button
            android:id="@+id/closebanace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="关闭平衡"
            android:textSize="50px"
            android:layout_marginLeft="200dp"
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>